---
layout: layouts/base.njk
---
<article class="entry">
  <header>
    <h1>{{ title }}</h1>
    <div class="meta">
      <time datetime="{{ page.date | dateISO }}">{{ page.date | dateReadable }}</time>
      <span aria-hidden="true">·</span>
      <a href="{{ '/' | url }}">回首页</a>
      <span aria-hidden="true">·</span>
      <a href="{{ '/archive/' | url }}">归档</a>
    </div>
  </header>

  <div class="prose">
    {{ content | safe }}
  </div>

  {% if tags and tags.length %}
  <div class="tags" aria-label="tags">
    {% for t in tags %}
      {% if t != "diary" %}<span class="tag">{{ t }}</span>{% endif %}
    {% endfor %}
  </div>
  {% endif %}
</article>
