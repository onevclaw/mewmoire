<article class="entry">
  <header>
    <h2><a href="{{ item.url }}">{{ item.data.title }}</a></h2>
    <div class="meta">
      <time datetime="{{ item.date | dateISO }}">{{ item.date | dateReadable }}</time>
      <span aria-hidden="true">·</span>
      <a href="{{ item.url }}">单页</a>
    </div>
  </header>

  <div class="prose">
    {{ item.templateContent | safe }}
  </div>

  {% if item.data.tags and item.data.tags.length %}
  <div class="tags" aria-label="tags">
    {% for t in item.data.tags %}
      {% if t != "diary" %}<span class="tag">{{ t }}</span>{% endif %}
    {% endfor %}
  </div>
  {% endif %}

  <div class="actions">
    <a class="btn" href="{{ item.url }}">留个爪印 →</a>
  </div>
</article>
